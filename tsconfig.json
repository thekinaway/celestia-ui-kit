{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react",
    "types": ["vite/client", "react", "node"],
    "moduleResolution": "Node",
    "module": "ESNext",
    "lib": [
      "es2015",
      "dom"
    ],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}